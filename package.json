{
  "name": "photocloud-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "infra",
      "backend/*",
      "frontend/*",
      "packages/*"
    ],
    "nohoist": [
      "**/next",
      "**/next/**",
      "**/@swc/**",
      "@photocloud/dashboard/react",
      "@photocloud/dashboard/react-dom"
    ]
  },
  "license": "MIT",
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn')===-1) throw new Error('Please use yarn instead of npm. This project uses yarn as the package manager.')\"",
    "build": "echo \"Use workspace builds\"",
    "lint": "echo \"Lint in workspaces\"",
    "test": "echo \"Tests run in workspaces\"",
    "smoke": "node scripts/smoke.mjs"
  },
  "resolutions": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "dependencies": {
    "@aws-sdk/client-cloudfront": "^3.932.0",
    "@aws-sdk/client-cloudwatch": "^3.932.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.932.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.932.0",
    "@aws-sdk/client-dynamodb": "^3.670.0",
    "@aws-sdk/client-lambda": "^3.932.0",
    "@aws-sdk/client-s3": "^3.670.0",
    "@aws-sdk/client-scheduler": "^3.932.0",
    "@aws-sdk/client-ses": "^3.932.0",
    "@aws-sdk/client-sfn": "^3.932.0",
    "@aws-sdk/client-sqs": "^3.932.0",
    "@aws-sdk/client-ssm": "^3.971.0",
    "@aws-sdk/client-sts": "^3.932.0",
    "@aws-sdk/lib-dynamodb": "^3.670.0",
    "@aws-sdk/s3-request-presigner": "^3.670.0",
    "archiver": "^7.0.1",
    "yazl": "^3.3.1",
    "esbuild": "^0.27.0",
    "express": "^4.18.2",
    "jimp": "^1.0.0",
    "nanoid": "^5.0.7",
    "p-limit": "^3.1.0",
    "sharp": "^0.33.0",
    "stripe": "^17.3.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2"
  },
  "packageManager": "yarn@1.22.22"
}
